<div class="column is-one-quarter">
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
                <% if proion.main_image.present? %>
                    <img src="<%= proion.main_image %>" alt="Placeholder image">
                <% else %>
                    <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                <% end %>
            </figure>
        </div>
        <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4"><%= proion.title %></p>
                </div>
            </div>

            <div class="content">
                <div class="is-flex is-justify-content-space-between is-align-items-center">
                    <span><%= truncate(proion.description, length: 25, omission: '...') %></span>
                </div>
                <br>
                <span style="font-weight: bold; font-size: 18px;"><%= "#{proion.price},00 den" %></span>
            </div>
            <div>
                <button class="button is-danger is-rounded mt-1 is-fullwidth">Buy it</button>
            </div>
        </div>
    </div>
</div>