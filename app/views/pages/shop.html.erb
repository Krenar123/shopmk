<div class="main-container">
  <div class="columns">
    <div class="column is-2_5">
      <div class="columns is-multiline is-flex-direction-column">
        <div class="column is-12 ">
          <div class="card is-flex ">
            <div class="column is-3 is-flex is-justify-content-center is-align-items-center" style="padding:0.5rem">
              <span class="showing-time pt-1"> 14 min.</span>
            </div>
            <div class="mt-1">
              <span class="opened-hours has-text-weight-semibold	subtitle is-7" style="color:#a9a8a8">OPEN 8:00 am - 11:59 pm</span>
              <% if @current_user.present? %>
                <div>
                  <% if @location.present? %>
                    <p class="client-address has-text-weight-semibold subtitle is-7"><%= truncate(@location.full_address, length: 20, omission: '...') %></a>
                  <% else %>
                    <a href="#" data-controller="location" data-action="click->location#openLocation" class="client-address has-text-weight-semibold subtitle is-7	has-text-danger">Add  address</a>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <%= render 'shared/navbar/main' %>
      </div>
    </div>
    <div class="column is-9 is-offset-3 pt-5 pl-6">
      <div class="columns is-mobile is-flex-direction-column" style="position: relative; min-height: 555px; margin-right: 0px;">
        <div id="category-details">
          <%= render @category %>
        </div>
        <!-- Loader 4 -->
        <div id="loader-4" class="loader-4 center"><span></span></div>
      </div>
    </div>
  </div>
</div>

<%= render 'locations/location', current_user: @current_user, location: @location, show_location: @show_location %>
