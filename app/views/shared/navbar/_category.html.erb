<a href="#" data-controller="render-category" data-render-category-load-path="/<%= I18n.locale %>/navigate-category" data-action="click->render-category#loadSubCategories" data-reference="<%= category.reference %>" class="mr-4">
  <div class="is-hidden-mobile">
    <div class="is-flex mt-2 is-align-items-center">
      <i style="width: 25px;" class="has-text-black-bis <%= category.icon %>"></i>
      <p class="ml-2 paragraph-icons has-text-black-bis "><%= category.name %></p>
    </div>
  </div>
  <!-- IF NOT BULMA USE MEDIA QUERY  MAX-WIDTH: 640px -->
  <div class="is-hidden-tablet">
    <div class="card">
      <div class="product-image is-flex is-flex-direction-column is-align-center is-justify-content-center"style="position:relative">
        <p class="card-category"><%= category.name %></p>
        <span class="is-flex" style="height: 80px;">
        <% if category.image.present? %>
          <%= image_tag(category.image, :size => "80x80",style:"margin:0 auto; object-fit: contain;") %>
        <% else %>
          <%= image_tag("domestos.png", :size => "80x80",style:"margin:0 auto; object-fit: contain;") %>
        <% end %>
        </span>
        <%# <i class="fa fa-plus add-icon" style="position:absolute; top: 5px; left: 5px;" aria-hidden="true"></i> %>
      </div>
    </div>
  </div>
</a>
