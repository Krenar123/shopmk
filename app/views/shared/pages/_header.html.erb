<section class="hero is-link">
  <div class="hero-body is-flex is-justify-content-space-between">
    <p class="title">
      <%= image_tag("logo_hero.png",size:"150x150")%>
    </p>
    <% if current_hrist.present? %>
      <%= button_to "Sign out", destroy_hrist_session_path, {class: 'authorization-btn', method: :delete}  %>
    <% else %>
      <%= button_to "Sign in", new_hrist_session_path, {class: 'authorization-btn', method: :get}  %>
    <% end %>
  </div>
</section>