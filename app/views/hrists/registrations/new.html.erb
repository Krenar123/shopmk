<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "hrists/shared/error_messages", resource: resource %>
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", type: "Email" %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input", type: "password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", type: "password" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control">
      <%= f.submit "Sign up", class: "button is-success" %>
    </p>
  </div>
<% end %>

<%= render "hrists/shared/links" %>
